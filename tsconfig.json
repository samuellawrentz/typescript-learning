{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES5",    
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
     "outDir": "./dist", 
    "removeComments": true,
     "types": ["d3"],
      },
  "compileOnSave": true,
  "include": [
    "src/**/*"
],
"exclude": [
    "node_modules",
    "**/*.spec.ts"
]
}